---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Výběr jídla"
    title="Na co máte chuť?"
  />

  <ContactUs
    id="form"
    title="Vyberte si váš svatební oběd!"
    subtitle="Servírovat budeme vepřovou panenku s grenaille, houbovou a pepřovou omáčkou. Pokud byste si dali raději kuřecí steak, na místo vepřové panenky, vyplňte formulář níže."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Jméno a příjmení',
      },
      {
        type: 'email',
        name: 'email',
        label: 'E-mail',
      },
    ]}
    textarea={{
      label: 'Jakou změnu jídla požadujete?',
    }}
  />
</Layout>
