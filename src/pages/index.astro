---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Zveme vás na naši svatbu 14. 9. 2024, zámek Holešov',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Harmonogram',
        href: '#features',
      },
      { text: 'Otázky a odpovědi', href: '#faqs' },
    ]}
    image={{ src: '~/assets/images/rmlogo.svg', alt: 'Logo' }}
    tagline="Marie Šenovská & Radek Šiška"
  >
    <Fragment slot="title"> Zveme vás na naši svatbu </Fragment>

    <Fragment slot="subtitle"> 14. 9. 2024, zámek Holešov</Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Harmonogram"
    title="Na co se můžete těšit"
    subtitle=""
    items={[
      {
        title: '10:30 Příjezd hostů',
        description: 'Svatební den začíná na zámku v Holešově.',
        icon: 'tabler:map-pin',
      },
      {
        title: '11:00 Obřad v Sala Terrena',
        description: 'V 11:00 začíná svatební obřad.',
        icon: 'tabler:ball-bowling',
      },
      {
        title: '11:45 Společné focení',
        description: 'Následuje společné svatební focení v zámecké zahradě.',
        icon: 'tabler:camera',
      },
      {
        title: '12:30 Přemístění na Resort Rusava',
        description: 'Přesouváme se na Resort Rusava, kde bude probíhat zbytek svatebního dne.',
        icon: 'tabler:car',
      },
      {
        title: '13:00 Vítání před hotelem',
        description: 'Svatební tradice.',
        icon: 'tabler:glass-cocktail',
      },
      {
        title: '13:30 Zahájení svatební hostiny',
        description: 'Servírovat se bude vepřová panenka nebo kuřecí steak s grenaille, pepřovou či houbovou omáčkou.',
        icon: 'tabler:tools-kitchen-2',
      },
      {
        title: '16:30 Krájení dortu',
        description: 'Rozkrojíme svatební dort dát si k němu můžete třeba kávu.',
        icon: 'tabler:cake',
      },
      {
        title: '17:30 První tanec',
        description: 'Otevření parketu novomanželským tancem.',
        icon: 'tabler:cake',
      },
      {
        title: '18:00 Večerní raut',
        description: 'Vyberte si z široké nabídky různých jídel jako je tatarák, řízečky, žebírka aj.',
        icon: 'tabler:meat',
      },
      {
        title: '19:30 Focení s prskavkami',
        description: 'Krátké focení po setmění.',
        icon: 'tabler:camera',
      },
      {
        title: '20:00 Večerní zábava',
        description: 'Na tanečním parketu vás uvítá DJ René Jančík.',
        icon: 'tabler:confetti',
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    id="faqs"
    title="Otázky a odpovědi"
    subtitle=""
    tagline="FAQ"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Kde a kdy se svatba koná?',
        description:
          'Start: nám. F. X. Richtra 190, 76901 Holešov<br>Kdy: 10:30 příjezd, 11:00 obřad<br>Přesun na hotel: Resort Rusava, Rusava 334, 76841 Rusava',
      },
      {
        title: 'Kde je možné zaparkovat?',
        description:
          'Parkování je možné naproti zámku případně v ulici podél zámku. Při přesunu na Resort Rusava je možné parkování přímo před hotelem.',
      },
      {
        title: 'Jak je to s dopravou?',
        description:
          'Je zajištěný večerní odvoz z Rusavy. Příjezd do Holešova a přesun na Rusavu si každý zajišťuje sám.',
      },
      {
        title: 'Jaký je dress-code?',
        description:
          'Formální oblečení. Aktuální převověď počasí hlásí nižší teploty kolem 15°C a déšť. Vybavte se deštníky.',
      },
      {
        title: 'Budou na svatbě nějaké speciální aktivity?',
        description: 'Ano, dozvíte se o nich v den svatby.',
      },
      {
        title: 'Bude k dispozici fotokoutek?',
        description: 'Ano, můžete se vyfotit s různými rekvizitami a zanechat nám vzpomínku v knize.',
      },
    ]}
  />
</Layout>
