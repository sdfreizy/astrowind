---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Zveme vás na naši svatbu 14. 9. 2024, zámek Holešov',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Harmonogram',
        href: '#features',
      },
      { text: 'Výběr jídla', href: '/vyber-jidla' },
    ]}
  >
    <Fragment slot="title"> Zveme vás na naši svatbu 14. 9. 2024, zámek Holešov </Fragment>

    <Fragment slot="subtitle"> Zde se dozvíte všechny informace ke svatebnímu dni. </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Harmonogram"
    title="Na co se můžete těšit"
    subtitle=""
    items={[
      {
        title: '10:30 Příjezd hostů',
        description: 'Dostavte se včas na zámek v Holešově.',
        icon: 'tabler:map-pin',
      },
      {
        title: '11:00 Obřad',
        description: 'V 11:00 začíná svatební obřad.',
        icon: 'tabler:ball-bowling',
      },
      {
        title: '11:45 Společné focení',
        description: 'Následuje společné svatební focení v zámecké zahradě.',
        icon: 'tabler:camera',
      },
      {
        title: '12:30 Přesun, Resort Rusava',
        description: 'Přesouváme se na Resort Rusava, kde bude probíhat zbytek svatebního dne.',
        icon: 'tabler:car',
      },
      {
        title: '13:30 Hostina',
        description:
          'Pochutnáte si na svatebním obědě. Servírovat budeme vepřovou panenku nebo kuřecí steak s grenaille, pepřovou nebo houbovou omáčkou.',
        icon: 'tabler:tools-kitchen-2',
      },
      {
        title: '15:00 Krájení dortu',
        description: 'Rozkrojíme svatební dort, objednat si k němu můžete třeba kávu.',
        icon: 'tabler:cake',
      },
      {
        title: '18:00 Večerní raut',
        description: 'Vyberte si z široké nabídky různých jídel. Těšit se můžete na zeleninu.',
        icon: 'tabler:meat',
      },
      {
        title: '21:00 Party',
        description: 'Na tanečním parketu vás uvítá DJ René Jančík.',
        icon: 'tabler:confetti',
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    id="faqs"
    title="Otázky a odpovědi"
    subtitle=""
    tagline="FAQ"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Je zajištění přesun hostů z Holešova na Rusavu?',
        description: 'Hromadný transport zajištění není.',
      },
      {
        title: 'Jaký je dress code?',
        description: 'Formální oblečení. Vyhněte se červené barvě, která znamená, že svatebčanům nepřejete.',
      },
      {
        title: 'Bude na svatbě střelba z luku?',
        description: 'Ano, bude. Těšit se na ni můžete odpoledne.',
      },
      {
        title: 'Mohu se těšit na slivovici a jiný alkohol?',
        description:
          'Ano můžete. Na baru v restauraci si můžete objednat jakýkoliv alkoholický či nealkoholický nápoj. K dispozici bude také domácí slivovice.',
      },
      {
        title: 'Jsou na svatbě povoleni psi?',
        description: 'Nejsou.',
      },
      {
        title: 'Bude k dispozici fotokoutek?',
        description: 'Ano bude, ale pozor, ať nepraskne objektiv.',
      },
    ]}
  />
</Layout>
